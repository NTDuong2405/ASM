
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Employee</title>
    @*Bootstrap CSS CDN*@
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                @using (Html.BeginForm("Employee", "Home", FormMethod.Post, new { id = "empform" }))
                {

                    @Html.ValidationSummary()
                    @Html.AntiForgeryToken()


                    @*@Html.HiddenFor(model => model.EmpID)*@

                    <div class="form-group">
                        @*@Html.LabelFor(model => model.EmpFirstName, "First Name")
                        @Html.TextBoxFor(model => model.EmpFirstName, new { @class = "form-control" })*@
                    </div>
                    <div class="form-group">
                        @*@Html.LabelFor(model => model.EmpLastName, "Last Name")
                        @Html.TextBoxFor(model => model.EmpLastName, new { @class = "form-control" })*@
                    </div>

                    <div class="form-group">
                        @*@Html.LabelFor(model => model.EmpSalary, "Salary")
                        @Html.TextBoxFor(model => model.EmpSalary, new { @class = "form-control", @type = "number" })*@
                    </div>

                    <input type="submit" class="btn btn-primary " value="Submit" />

                }
            </div>
        </div>
    </div>
</body>
</html>
